#include <stdio.h>
#include <stdlib.h>

float pedir();

int main(void) {

	printf("la letra ingresada es: %c", pedir);

	return EXIT_SUCCESS;
}

float pedir()
{
	float letra;
	printf("ingrese una letra: ");
	scanf("%c", &letra);

	return letra;
}
