#include <stdio.h>
#include <stdlib.h>

int suma(int num1,int num2, int *puntero);

int main(void) {

	setbuf(stdout, NULL);

	int num1;
	int num2;
	int respuesta;


	printf("ingrese un numero: ");
	scanf("%d", &num1);

	printf("ingrese otro numero: ");
	scanf("%d", &num2);

	respuesta=suma(num1, num2, &puntero);

	printf("si retorna 0, se pudo, si no, darÃ¡ -1: (%d) y el resultado de la suma es: %d", puntero, respuesta);


	return EXIT_SUCCESS;
}

int suma(int num1,int num2, int* puntero)
{
	*puntero = num1+num2;

	if(num1>0 || num1<1 && num2>0 || num2<1)
	{
		return 0;
	}
	else
	{
		return -1;
	}
}
