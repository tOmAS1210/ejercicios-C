float temperaturaEnCelsius(float* tempCelsius)
{

	float valorCelsius;

	do
	{
		printf("ingrese una temperatura en Celsius entre 0ยบ y 100ยบ celsius: ");
		scanf("%f", &valorCelsius);
		*tempCelsius = valorCelsius;
		//return 0;
	}while(valorCelsius<0 || valorCelsius>100);

	return 0;
}






