float pedir()
{
	float numero;

	do{
	printf("ingrese un numero con decimal entre el 200 y 350: ");
	scanf("%f", &numero);
	}while(numero<200 || numero>350);

	return numero;
}

void mostrarNumero(float numero)
{
	printf("el numero con decimal ingresado es: %.2f", numero);
}

int comprobarPar(int numero)
{
	if(numero%2==0)
	{
		return 1;
	}
	else
	{
		return 0;
	}
}

int asignar(int num)
{
	do{
	printf("ingrese un valor entre 10 y 100: ");
	scanf("%d", &num);
	}while(num<10.0 || num>100.0);//l

	return num;
}

int realizarDescuento(float numero)
{
	int descuento;
	descuento = (numero*0.95);//descuento del 5%

	return descuento;
}

