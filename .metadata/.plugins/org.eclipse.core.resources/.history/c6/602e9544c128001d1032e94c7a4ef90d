#include <stdio.h>
#include <stdlib.h>

float pedir();

int main(void) {
	setbuf(stdout,NULL);
	float numero;

	pedir(numero);
	printf("la letra ingresada es: %f", numero);

	return EXIT_SUCCESS;
}

float pedir()
{
	float nuemro;
	printf("ingrese una letra: ");
	scanf("%f", &numero);

	return numero;
}
