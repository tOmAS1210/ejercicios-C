float pedir();
void mostrarNumero(float numero);


int main(void) {

	setbuf(stdout,NULL);

	float num;

	pedir();

	mostrarNumero();


	return EXIT_SUCCESS;
}

float pedir()
{
	float numero;

	printf("ingrese un numero con decimal: ");
	scanf("%f", &numero);

	return numero;
}

void mostrarNumero(float numero)
{
	printf("el numero entero ingresado es : %f", numero);
}
