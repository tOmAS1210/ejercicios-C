#include <stdio.h>
#include <stdlib.h>
#include "funciones.h"


int main(void) {
	setbuf(stdout,NULL);

	int numero = 0;
	int total = 0;
	int i;

	total = pedir(numero);

	for(i=numero; i>1;i--)
	{
		total *= i;
	}

	printf("\nel valor del factorial del numero ingresado es: %d", total);

	return EXIT_SUCCESS;
}
