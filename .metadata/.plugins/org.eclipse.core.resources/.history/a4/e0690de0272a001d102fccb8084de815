#include <stdio.h>
#include <stdlib.h>

float pedir();

int main(void) {
	setbuf(stdout,NULL);


	printf("el numero ingresado es: %.2f", pedir());

	return EXIT_SUCCESS;
}

float pedir()
{
	float numero;

	printf("ingrese un numero con decimal: ");
	scanf("%f", &numero);

	return numero;
}
