#include <stdio.h>
#include <stdlib.h>

int suma(int num1,int num2, int* respuesta);

int main(void) {

	setbuf(stdout, NULL);

	int num1;
	int num2;
	int respuesta;
	int puntero;


	printf("ingrese un numero: ");
	scanf("%d", &num1);

	printf("ingrese otro numero: ");
	scanf("%d", &num2);

	puntero=suma(num1, num2, &respuesta);

	printf("si retorna 0, se pudo, si no, dar√° -1: (%d) y el resultado de la suma es: %d", puntero, respuesta);


	return EXIT_SUCCESS;
}

int suma(int num1,int num2, int* respuesta)
{
	*respuesta = num1+num2;

	if(respuesta!=null) //en suma no hay errores, pero es para probar;
	{
		return 0;
	}
	else
	{
		return -1;
	}
}
