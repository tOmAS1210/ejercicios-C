#include <stdio.h>
#include <stdlib.h>

int comprobar();

int main(void) {
	setbuf(stdout,NULL);

	printf("el numero ingresado: %")

	return EXIT_SUCCESS;
}

int comprobar()
{
	int numero;

	if(numero % 2 == 0)
	{
		return 0;
	}
	else
	{
		return 1;
	}

	return numero;
}
