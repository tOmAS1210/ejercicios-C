#include <stdio.h>
#include <stdlib.h>

int numeroEntero(int numero);

int main(void) {
	setbuf(stdout,NULL);

	int resultado;
	int numeroEnterito;

	resultado = numeroEntero(numeroEnterito);

	printf("el numero entero ingresado es: %d", resultado);


	return EXIT_SUCCESS;
}

int numeroEntero(int numero)
{
	printf("ingrese un numero entero: ");
	scanf("%d", &numero);

	return numero;

}
