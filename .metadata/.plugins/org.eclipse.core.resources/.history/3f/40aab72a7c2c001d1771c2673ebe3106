#include <stdio.h>
#include <stdlib.h>
#include "funciones.h"


int main(void) {
	setbuf(stdout,NULL);

	int numero = 0;
	int total;

	total = pedir(numero);

	total!;

	printf("\nel valor del numero es: %d", total!);

	return EXIT_SUCCESS;
}
