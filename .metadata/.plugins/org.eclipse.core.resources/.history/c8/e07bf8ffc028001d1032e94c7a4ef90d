#include <stdio.h>
#include <stdlib.h>

float pedir();

int main(void) {
	setbuf(stdout,NULL);
	float letra;

	pedir();
	printf("la letra ingresada es: %c", letra);

	return EXIT_SUCCESS;
}

float pedir()
{
	float letra;
	printf("ingrese una letra: ");
	scanf("%c", &letra);

	return letra;
}
