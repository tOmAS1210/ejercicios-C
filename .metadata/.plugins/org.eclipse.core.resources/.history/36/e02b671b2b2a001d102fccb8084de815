float pedir()
{
	float numero;

	do{
	printf("ingrese un numero con decimal entre el 200 y 350: ");
	scanf("%f", &numero);
	}while(numero<200 || numero>350);

	return numero;
}

void mostrarNumero(float numero)
{
	printf("el numero con decimal ingresado es: %.2f", numero);
}

int comprobarPar(int numero)
{
	if(numero%2==0)
	{
		return 1;
	}
	else
	{
		return 0;
	}
}


