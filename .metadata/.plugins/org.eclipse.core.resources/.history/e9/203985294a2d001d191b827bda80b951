int main(void) {
	setbuf(stdout,NULL);

	int edad[10];
	int legajo[10];
	int sueldo[10];
	int i;

	for(i=0; i<10; i++)
	{
		//printf("\ningrese el legajo %d: ", i);
		//scanf("%d", &legajo[i]);

		printf("\ningrese la edad del empleado con el legajo en la posicion %d: ", i);
		scanf("%d", edad[i]);

		printf("\ningrese el sueldo del empleado con el legajo en la posicion %d: ", i);
		scanf("%d", sueldo[i]);
	}

	for(i=0; i<10; i++)
	{
		printf("\nel legajo del empleado es %d, su edad es: %d y su sueldo es %d:", legajo[i],edad[i], sueldo[i]);
	}





	return EXIT_SUCCESS;
}
