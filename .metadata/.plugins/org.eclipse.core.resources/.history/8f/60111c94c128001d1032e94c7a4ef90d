#include <stdio.h>
#include <stdlib.h>

float pedir(int numero);

int main(void) {
	setbuf(stdout,NULL);


	pedir();
	printf("el numero ingresado es: %.2f", numero);

	return EXIT_SUCCESS;
}

float pedir(int numero)
{
	float numero;
	printf("ingrese un numero con decimal: ");
	scanf("%f", &numero);

	return numero;
}
